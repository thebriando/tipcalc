<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:id="@+id/tipAmt"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:hint="Initial Price"
            android:inputType="numberDecimal"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="250dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Spinner
            android:id="@+id/tipChooser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tipBtn" android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tipAmt"/>
    <Button
            android:id="@+id/tipBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip"
            android:enabled="false"
            app:layout_constraintStart_toStartOf="@+id/tipAmt" android:layout_marginTop="34dp"
            android:layout_marginLeft="38dp" android:layout_marginStart="38dp"
            app:layout_constraintTop_toBottomOf="@+id/tipChooser"/>
</android.support.constraint.ConstraintLayout>